
<% if @item.user.present? %>
    <%= link_to @user.username, user_path(@user.id) %>
<% end %>


<h1><%= @item.name %></h1>
  <div class="flex">
    <div class="description">
    <%= image_tag @item.image, :class =>  'feature' if @item.image.present? %>
    </div>
      <br>
    <div class="description">
      <h5>Description:</h5>
        <%= @item.description %>

        <h3><%= number_to_currency @item.price %></h3>

          <ul>

            <li>Name: <%= @item.name %></li>
            <li>Size: <%= @item.size %></li>
            <li>Style:<%= @item.style %></li>
            <li>Condition: <%= @item.condition %></li>
            <li>Color: <%= @item.color %></li>
            <li>Shipping: <%= @item.shipping %></li>

          </ul>


<% if @item.user.present? %>
<div class="editor">
  <%= link_to 'Edit Item', edit_item_path(@item) %>
</div>
<% end %>

<div class="comment-box">

  <h5>Reviews for this seller</h5>
  <p>coming soon</p>
</div>

<%= link_to 'Add to bag' %>
<%= link_to '✉️ Ask seller a question' %>
<%= link_to '❤️ Add to wishlist ' %>
</div>
</div>
