<%= form_for @item, :html => {:multipart => true}  do |f| %>

  <%= label_tag  " " %>
  <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name', :required => true %>

  <%= label_tag " " %>
  <%= f.text_field :size, :placeholder => 'Size', :class => 'form-control' %>

  <%= label_tag " " %>
  <%= f.text_field :condition, :placeholder => 'Condition',:class => 'form-control' %>

  <%= label_tag " "%>
  <%= f.text_field :color, :placeholder => 'Colour',:class => 'form-control' %>

  <%= label_tag " " %>
  <%= f.number_field :shipping, :class => 'form-control', :placeholder => "Shipping / Enter 0 if free shipping"%>

  <%= label_tag " " %>
  <%= f.text_field :style, :placeholder => "Style", :class => 'form-control' %>

  <%= label_tag " "%>
  <%= f.number_field :price, step: :any, :placeholder => 'Price / $', :class => 'form-control'%>

  <%= label_tag " " %>
  <%= f.text_field :description, :placeholder => 'Description', :class => 'form-control' %>

  <%# change to cloudinary %>
  <%= label_tag " " %>
  <%= f.file_field :image, :class => 'form-control', :placeholder => 'Image:', :required => true %>

  <%= f.submit :class => 'Submit' %>
<% end %>
