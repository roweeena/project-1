<h1>All items</h1>
<div class="flex">

  <% @items.each do |item| %>
    <div class="card">
      <% if item.image.nil? %>
        <%= link_to image_tag("https://via.placeholder.com/200"), item %>
      <% else %>
        <%= link_to cl_image_tag(item.image, :class => 'thumb'), item  %>
      <% end %>
      <br>
      <%= link_to item.name, item %>
      <br>
      <%= number_to_currency(item.price) %>
    </div>
  <% end %>

</div>
