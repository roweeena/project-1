<% if @current_user.admin? %>
<h2>All Orders</h2>

  <% @orders.each do |order| %>
    <p>Name: <%= order.name %></p>
    <p>Email: <%= order.email %></p>
    <p>Order: </p>
    <ul>
      <% order.line_items.each do |item| %>
        <ul>
          <li><p><%= item.item.name %> / <%= number_to_currency item.item.price %></li></p>
        </ul>
      <% end %>
    </ul>
  <% end%>
<% else %>
<h3>Sorry, this page is off limits</h3>

<% end %>
