<div class="logo">
  <a href="/"><h3>fuku<br>zatsu</h3></a>
  <nav>
    <%= link_to 'shop', items_path %>
  <% if @current_user.present? %>

  <%= link_to image_tag('/assets/icons8-user-48.png', :width => '20px'), user_path(@current_user.id) %>
  <%= link_to image_tag('/assets/icons8-shopping-bag-48.png', :width => '20px'), cart_path(@current_cart) %>
  <%= link_to "log out" , login_path, :method => 'delete' %>
  <% else %>
  <%= link_to 'sign up', new_user_path %>
  <%= link_to 'log in', login_path %>
  <% end %>
</nav>
</div>
