<h2><% if @user == @current_user %>
  <%= 'My profile' %>
<% else %>
  <%= @user.username %>'s profile</h2>
<% end %>

<%= cl_image_tag(@user.image, :class => 'thumb') if @user.image.present?%>
<br>
<p>Name:
  <%= @user.name %></p>
<p>Username:
  <%= @user.username %></p>
<p>Date of Birth:
  <%= @user.dob %></p>
<p>Location:
  <%= @user.location %></p>
<% if @user == @current_user  %>
<p>Email:
  <%= @user.email %></p>


<p><%= link_to 'Change password/edit profile', edit_user_path %>
<%= link_to 'Delete account', @user, :method => 'delete', :data => {:confirm => "Are you sure?"}   %></p>
<br>
<h3>All reviews</h3>
coming soon
<br>


<h3>See my items</h3>
<% @user.items.each do |item| %>
<%# <%= link_to image_tag(item.image, :class => 'thumb'), item %> %>
<br>
<%= item.name %>
<% end %>
<br>
<%= link_to 'Add item', new_item_path %>
<% end %>
